<div class="container mt-4">
  <h1 class="text-center mb-4">Explore Pokémon</h1>

  <!-- Search Bar -->
  <div class="mb-4">
    <form id="search-form" action="<%= explore_pokemon_path %>" method="get">
      <div class="input-group">
        <input
          type="text"
          name="search"
          class="form-control"
          placeholder="Search Pokémon by Name or Pokédex #"
          value="<%= params[:search] %>"
        />
        <button type="submit" class="btn btn-primary">Search</button>
      </div>
    </form>
  </div>

  <!-- Pokémon List -->
  <div id="pokemon-list" class="row">
    <% @pokemon.each do |poke| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= poke[:name] %></h5>
            <p class="card-text">Type: <%= poke[:types].join(", ") %></p>
            <p class="card-text">Pokedex Number: <%= poke[:number] %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Load More Button -->
  <% if @pokemon.size == 10 %>
    <div class="text-center mt-4">
      <button id="load-more" class="btn btn-outline-primary">Load More Pokémon</button>
    </div>
  <% end %>
</div>




