<p style="color: green"><%= notice %></p>

<div class="container mt-4">
  <!-- Pokémon Details -->
  <h1 class="text-center mb-4"><%= @pokemon.name %></h1>
  <p><strong>Pokedex Number:</strong> <%= format('#%04d', @pokemon.pokedex_number) %></p>
  <p><strong>Type:</strong> <%= @pokemon.types.present? ? @pokemon.types.split(", ").join(", ") : "N/A" %></p>

  <% if user_signed_in? %>
    <% if !current_user.pokemons.exists?(id: @pokemon.id) %>
      <!-- Add to Collection Button -->
      <%= button_to "Add to Collection", pokemons_path, params: { pokemon_id: @pokemon.id }, method: :post, class: "btn btn-add-to-collection mt-3" %>
    <% else %>
      <!-- Already in Collection Button -->
      <button class="btn btn-secondary mt-3" disabled>Already in Collection</button>
    <% end %>
  <% else %>
    <!-- Prompt for Guest Users -->
    <p class="text-muted text-center">
      <em>Sign in to add Pokémon to your collection!</em>
    </p>
  <% end %>
</div>

<hr>

<!-- Actions -->
<div class="mt-3 text-center">
  <%= link_to "Edit this Pokémon", edit_pokemon_path(@pokemon), class: "btn btn-outline-primary mx-2" if user_signed_in? %>
  <%= link_to "Back to Pokémon", pokemons_path, class: "btn btn-outline-secondary mx-2" %>
  <% if user_signed_in? %>
    <%= button_to "Destroy this Pokémon", @pokemon, method: :delete, class: "btn btn-danger mx-2", data: { confirm: "Are you sure you want to delete this Pokémon?" } %>
  <% end %>
</div>

def check_number(n):
    """
    Function to check if a number is even or odd.
    Returns True if the number is even, False if it is odd.
    Prints a message indicating whether the number is even or odd.
    """
    if n % 2 == 0:
        print(f"{n} is even")
        return True  # Returns True if the number is even
    else:
        print(f"{n} is odd")
        return False  # Returns False if the number is odd

# Example usage
check_number(4)  # Expected: Prints "4 is even" and returns True
check_number(7)  # Expected: Prints "7 is odd" and returns False
